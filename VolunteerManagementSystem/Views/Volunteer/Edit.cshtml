@model Volunteer
@{
    ViewBag.Title = "Edit Volunteer";
    Layout = null;
}
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="VolunteerID" />
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Center Preferred:</label>
            <select asp-for="CentersPreferred" class="form-control">
                <option value="" disabled selected>Select</option>
                <option value="Environment">Environmental Center</option>
                <option value="Kitchen">Food/Supply Center</option>
                <option value="Senior">Senior Center</option>
                <option value="Kid">Kids Center</option>
                <option value="Study">Study Center</option>
                <option value="Media">Media Center</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="SkillsInterests"></label>
            <textarea asp-for="SkillsInterests" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Availability:</label>
            <select asp-for="Availability" class="form-control">
                <option value="" disabled selected>Select</option>
                <option value="M">Monday</option>
                <option value="T">Tuesday</option>
                <option value="W">Wednesday</option>
                <option value="Th">Thursday</option>
                <option value="F">Friday</option>
                <option value="S">Saturday</option>
                <option value="Su">Sunday</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Education"></label>
            <input asp-for="Education" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Licenses"></label>
            <input asp-for="Licenses" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EmergencyName"></label>
            <input asp-for="EmergencyName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EmergencyPhone"></label>
            <input asp-for="EmergencyPhone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EmergencyEmail"></label>
            <input asp-for="EmergencyEmail" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="EmergencyAddress"></label>
            <input asp-for="EmergencyAddress" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ValidLicense"></label>
            <input asp-for="ValidLicense" class="form-control" />
        </div>        
        <div class="form-group">
            <label asp-for="ValidSocial"></label>
            <input asp-for="ValidSocial" class="form-control" />
        </div>
        <div class="form-group">
            <label>Approval</label>
            <select asp-for="Approval" class="form-control">
                <option value="" disabled selected>Select</option>
                <option value="approved">Approved</option>
                <option value="pending">Pending Approval</option>
                <option value="disapproved">Disapproved</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>
        <br />
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <button asp-action="ManageVolunteer" class="btn btn-primary">Cancel</button>
        </div>
    </form>